{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./deploy/**/*",
    "./validator/**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "./scripts/vote.py"
  ]
} 